<div class="row my-5">
  <div class="col-12">
    <div id="projects" class="container">
      <% data.projects.each do |project| %>
        <div class="proj-wrapper d-flex my-5 section">
          <div class="col-6">
            <h3><%= project.name %></h3>
            <hr>
            <p><%= project.description %></p>
            <div class="tech-stack">
              <%= project.stack %>
            </div>
            <button>View Project</button>
          </div>
          <div class="col-6">
            <a href="<%= project.url%>">
              <%= image_tag project.image, class: "w-100", alt: "An image showing an application project" %>
            </a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
